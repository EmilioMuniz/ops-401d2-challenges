# Main
import time
import datetime
import os

while True:
    print(os.system("ping 127.0.0.1"))
    time.sleep( 2 )
    print(os.system("ping 127.0.0.1"))
    time.sleep( 2 )
    now = datetime.datetime.now()
    print("Success: ")
    print(str(now)+" "+"Network Active to 127.0.0.1")
